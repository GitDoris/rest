  left: 60rpx;
}

.createOrder .cotitle {
  top: 44rpx;
  position: absolute;
  right: 126rpx;
  width: 140rpx;
  height: 28rpx;
  font-size: 28rpx;
  text-align: center;
}

.createOrder .creOrderBtn {
  top: 100rpx;
  position: absolute;
  right: 80rpx;
  width: 210rpx;
  height: 70rpx;
  font-size: 29rpx;
  text-align: center;
  background-position: center;
  background-size: contain;
  background-repeat: no-repeat;
  border-radius: 50rpx;
  border: none;
  color: white;
}

.createOrder  button::after {
  border: none;
}

.productList {
  width: 670rpx;
  min-height: 250rpx;
  position: relative;
  margin: 20rpx auto;
}

.swiper-tab {
  width: 100%;
  border-bottom: 2rpx solid #ececec;
  text-align: center;
  height: 56rpx;
  line-height: 56rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}

.swiper-tab-item {
  width: 50%;
  color: #434343;
  font-size: 29rpx;
}

.swiper-tab-item:last-child::before {
  content: " ";
  height: 40rpx;
  width: 1rpx;
  background-color: #ececec;
  left: 335rpx;
  top: 10rpx;
  position: absolute;
}

.active {
  color: #333;
  /* border-bottom: 4rpx #f65959 solid; */
  text-align: center;
}

