.swiperBox {
  width: 670rpx;
  height: 250rpx;
  position: relative;
  margin: 5rpx auto 30rpx auto;
  box-shadow: 0rpx 10rpx 10rpx rgba(179, 177, 177, 0.9);
}

.swiperBox swiper {
  width: 670rpx;
  height: 250rpx;
  box-shadow: 0rpx 10rpx 10rpx rgba(179, 177, 177, 0.9);
}

.swiperBox image {
  border-radius: 10rpx;
  width: 670rpx;
  height: 250rpx;
}

.carAccessBox {
  width: 670rpx;
  height: 150rpx;
  position: relative;
  margin: 0 auto;
}

.carAccBtn {
  width: 324rpx;
  height: 140rpx;
  line-height: 60px;
  text-align: center;
  float: left;
  color: white;
  background-position: center;
  background-size: contain;
  background-repeat: no-repeat;
}

.authBtn {
  width: 324rpx;
  height: 140rpx;
  line-height: 60px;
  text-align: center;
  float: right;
  color: white;
  background-position: center;
  background-size: contain;
  background-repeat: no-repeat;
}

.noticeBox {
  width: 670rpx;
  height: 50rpx;
  position: relative;
  margin: 30rpx auto;
  display: flex;
  align-items: center;
}

.noticeBox text {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 27rpx;
  color: #333;
