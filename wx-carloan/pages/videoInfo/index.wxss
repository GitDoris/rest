/* pages/videoInfo/index.wxss */
.headerTitle{
  height: 70rpx;
  line-height: 70rpx;
  vertical-align: middle;
  border-bottom: 6rpx solid #FAFAFB;
  display: flex;
}
.itemOne,.itemSecond,.itemThird{
  text-align: center;
}
.itemOne{
  width: 15%;
  font-size: 60rpx;
}
.itemSecond{
  width: 70%;
  font-weight: bold;
}
.itemThird{
  width: 15%;
  font-size: 30rpx;
}
.tab-h{
  background: #fff;
  z-index: 999; 
  height: 80rpx;
  width: 100%; 
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #fff; 
  font-size: 30rpx; 
  white-space: nowrap;
  /* box-shadow:0px 3rpx 5rpx rgba(218,219,228,0.7);
  position: fixed;
  left: 0;
  top: 90rpx; */
}
.tab-item{
  width: 50%;
  text-align: center;
  display: inline-block;
}
.tab-item.active{
  position: relative;
  font-weight: bolder;
}
.tab-item.active:after{ 
  content: "";
  display: block;
  height: 6rpx;
  width: 52rpx; 
  background:rgba(247,88,88,1);
  position: absolute; 
  bottom: 0;
  left: 43%;
  border-radius: 16rpx;
}
.tab-content{
  width: 100%;
  min-height: 930rpx;  
}
.tab-title{
  width: 100%;
  
  min-height: 930rpx;
  /* position: fixed; */
  /* position: absolute; */
  /* left: 0; */
  /* top: 170rpx; */
  overflow-y: auto;
}
.greyBackground{
  background: #F6F6FA;
  /* height: 70rpx;
  line-height: 70rpx; */
  vertical-align: middle;
  /* display: flex; */
}
.blackTitle{
  font-size: 28rpx;
  color: #000000;
  margin: 0 40rpx;
}
.greyTitle{
  font-size: 24rpx;
  color: #999999;
}
.whiteBackground{
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.addImageStyle{
  width: 31%;
  height: 200rpx;
  margin: 1%;
}
.showImage{
  width: 100%;
  height: 100%;
}
.haveImage{
  position: relative;
  width: 31%;
  height: 200rpx;
  margin: 1%;
}
.deleteStyle{
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
}