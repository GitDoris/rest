/**app.wxss**/
@import "/template/tabBar.wxss";
page{
  /* background-color: #fff; */
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx 0;
  box-sizing: border-box;
}

.contentBox {
  position: relative;
  width: 670rpx;
  margin: 0 auto;
}

.mt25 {
  margin-top: 25rpx;
}

/*认证记录页面 公用样式*/

.ACstatePic {
  width: 500rpx;
  height: 300rpx;
  position: relative;
  margin: 0 auto;
  margin-top: 140rpx;
  display: block;
  
}

.ACstatePic img {
  width: 500rpx;
  height: auto;
}

.AClinkBtn {
  background: linear-gradient(to right, #FF4646 0%,#FF6840 100%);
  color: #fffefd;
  border-radius: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin:40rpx 60rpx 0;
  text-align: center;
  font-size: 32rpx;
  box-shadow: 0 0 16rpx 2rpx rgba(243, 75, 75,.5);
}

.AClinkBtn2 {
  width: 600rpx;
  height: 110rpx;
  line-height: 105rpx;
  position: relative;
  color: white;
   margin-top: 60rpx; 
  font-size: 32rpx;
  border-radius: 30rpx;
  background-position: center;
  background-size: contain;
  background-repeat: no-repeat;
  background-color: none;
  background-image: url(http://creditsit.huaxiafinance.com/huaxiapuhui/markdownPic/indexpic1.png);
}

.NonelinkBtn {
  width: 600rpx;
  height: 110rpx;
  line-height: 105rpx;
  position: relative;
  /* top: 624rpx; */
  color: #999999;
  margin-top: 10rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  background-color: white;
  /* border:1rpx red solid; */
}

button[class='AClinkBtn']::after, button[class='AClinkBtn2']::after ,
 button[class='NonelinkBtn']::after {
  border: 0;
}

.ACstatetitle {
  width: 600rpx;
  height: 32rpx;
  line-height: 30rpx;
  position: relative;
  text-align: center;
  font-size: 32rpx;
  margin: 0 auto;
  margin-top: 90rpx;
  color: #000;
  display: block;
  
}

/*--公用的cell--*/

.cellBox {
  width: 100%;
  min-height: 30rpx;
  margin-bottom: 10rpx;
  position: relative;
  display: inline-block;
  font-size: 30rpx;
  border-top: 1rpx #ececec solid;
}

.cellBox .cellLine {
  height: 90rpx;
  position: relative;
  display: inline-block;
  width: 670rpx;
}

.cellBox span {
  position: absolute;
  /* border: 1rpx brown solid; */
}

.cellIcon {
  top: 40rpx;
  left: 0rpx;
  height: 32rpx;
  line-height: 32rpx;
    width: 32rpx;
}

.cellIcon image {
  height: 30rpx;
  width: 30rpx;
}

.cellTitle {
  font-size: 32rpx;
  color: #333;
  height: 30rpx;
  line-height: 30rpx;
  width: 210rpx;
   top: 40rpx;
  left: 60rpx;
}

.cellText {
  font-size: 24rpx;
  color: #babfc9;
  top: 46rpx;
  right: 20rpx;
  height: 20rpx;
  line-height: 20rpx;
  width: 80rpx;
}

.cellNav {
  top: 44rpx;
  right: 0rpx;
  height: 25rpx;
  width: 15rpx;
  background-position: center;
  background-size: contain;
  background-repeat: no-repeat;
  background-image: url(http://creditsit.huaxiafinance.com/huaxiapuhui/markdownPic/image_pic31.png);
}
/*基本文本框样式 修改密码 和 查询认证*/

.placlass{
  font-size: 29rpx;
  color: #bbb;
}
.certificationInput{
  height: 100rpx;
  border-bottom: 1rpx #ececec solid;
}
.searchBtn{
  margin-top: 60rpx;
  border-radius: 60rpx;
}
.errorCode{
  font-size: 20rpx;
  color: #ff0000;
}
.CertificationList{
  position: relative;
  margin-top: 20px;
  float: right;
  width: 140rpx;
  font-size: 27rpx;
  color: #587CF6;
 /* border-bottom: 1rpx #bbb solid; */
}
